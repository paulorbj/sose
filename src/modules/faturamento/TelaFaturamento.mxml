<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%" height="100%" creationComplete="configurarSubMenu();"
		 verticalGap="0" xmlns:faturamento="modules.faturamento.*"  >
	<fx:Script>
		<![CDATA[
			
			import modules.view.Login;
			
			private function configurarSubMenu():void
			{
				if(Login.currentUser){
					if(!Login.currentUser.perfil.subMenuBaixaFaturamento){
						subMenu.removeChild(baixa);
					}
					if(!Login.currentUser.perfil.subMenuListagemFaturamento){
						subMenu.removeChild(listagem);
					}
				}
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<mx:Fade id="fadeIn" duration="100" alphaFrom="0" alphaTo="1"/>
		<mx:Fade id="fadeOut" duration="100" alphaFrom="1" alphaTo="0"/>
	</fx:Declarations>
	
	<mx:LinkBar dataProvider = "{subMenu}"
				borderStyle = "none"
				fontFamily="Verdana" />
	
	<mx:ViewStack id="subMenu"  backgroundAlpha="0"
				  borderStyle = "none" 
				  width = "100%"	height="100%"			  
				  creationPolicy="all">
		
		<mx:Canvas id="baixa" label = "Realizar prÃ©-faturamento"  showEffect="fadeIn" hideEffect="fadeOut"  >
			<faturamento:BaixaOrdemServico />
		</mx:Canvas>
		<mx:Canvas id="listagem" label = "Listagem de faturas"  showEffect="fadeIn" hideEffect="fadeOut"  >
			<faturamento:ListagemFatura />
		</mx:Canvas>
		<mx:Canvas id="consulta" label = "Consultas Faturamento"  showEffect="fadeIn" hideEffect="fadeOut"  >
			<faturamento:ConsultaFaturamento />
		</mx:Canvas>
	</mx:ViewStack>
	
</mx:VBox>
