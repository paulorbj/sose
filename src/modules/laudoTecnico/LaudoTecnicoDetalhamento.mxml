<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%"
		 xmlns:fileupload="components.fileupload.*" xmlns:imageviewer="components.imageviewer.*"
		 xmlns:texto="components.textInput.*" xmlns:componentes="components.*" xmlns:grid="components.grid.*">
	
	<fx:Declarations>
		<mx:RemoteObject id="arquivoUploadService" destination="arquivoUploadService" endpoint="{resourceManager.getString('ConfigurationResource','amf')}">			
			<mx:method name="listarPorEntidadePorIdentificador"      
					   fault="onListarPorEntidadePorIdentificadorFault(event)" 
					   result="onListarPorEntidadePorIdentificadorResult(event)"
					   />
			
		</mx:RemoteObject>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import components.fileupload.UploadEvent;
			
			import entities.ArquivoUpload;
			import entities.laudoTecnico.LaudoTecnico;
			import entities.orcamentoreparo.DefeitoOrcRep;
			import entities.orcamentoreparo.Orcamento;
			import entities.orcamentoreparo.Reparo;
			import entities.recebimento.OrdemServico;
			
			import mx.collections.ArrayCollection;
			import mx.managers.CursorManager;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			import mx.validators.Validator;
			
			[Bindable]
			private var _laudoTecnico:LaudoTecnico
			
			[Bindable]
			private var _listaOrdemServico:ArrayCollection;
			
			[Bindable]
			private var _listaArquivoUpload:ArrayCollection = new ArrayCollection();
			
			private function onListarPorEntidadePorIdentificadorResult(event:ResultEvent = null):void
			{
				CursorManager.removeAllCursors(); 
				_listaArquivoUpload.removeAll();
				_listaArquivoUpload = event.result as ArrayCollection;
				
//				for each (var img:ArquivoUpload in _listaArquivoUpload){
//					if(img.id == _laudoTecnico.idImagem1 || img.id == _laudoTecnico.idImagem2 || img.id == _laudoTecnico.idImagem3){
//						img.isSelected = true;
//					}
//				}
			}
			
			private function onListarPorEntidadePorIdentificadorFault(event:FaultEvent = null):void
			{
				CursorManager.removeAllCursors();
				trace("[ListarComponentesFault] [" +	event.fault.faultCode + "] " + event.fault.faultString + " (" +	event.fault.faultDetail + ")");		
			}
			
			public function get laudoTecnico():LaudoTecnico
			{
				return _laudoTecnico;
			}
			
			
			public function set laudoTecnico(value:LaudoTecnico):void
			{
				_laudoTecnico = value;	
				_listaOrdemServico = new ArrayCollection();
				visualizadoImagem.limpar();
				
				var os:OrdemServico = _laudoTecnico.ordemServico;
				if(_laudoTecnico.reparo){
					if(os.unidadePai == null && os.placasFilhas != null && os.placasFilhas.length > 0){
						//Eh pai
						_listaOrdemServico.addItem(os.reparo);
						for each(var osFilha:OrdemServico in os.placasFilhas){
							_listaOrdemServico.addItem(osFilha.reparo);
						}
					}else{
						//Eh individual
						_listaOrdemServico.addItem(os.reparo);
					}
				}else{
					if(os.unidadePai == null && os.placasFilhas != null && os.placasFilhas.length > 0){
						//Eh pai
						_listaOrdemServico.addItem(os.orcamento);
						for each(var osFilha1:OrdemServico in os.placasFilhas){
							_listaOrdemServico.addItem(osFilha1.orcamento);
						}
					}else{
						//Eh individual
						_listaOrdemServico.addItem(os.orcamento);
					}
				}
				tn.selectedIndex = 0;
				this.addEventListener(UploadEvent.UPLOAD_COMPLETO,uploadConcluidoCallback);
				uploadConcluidoCallback();
			}
			
			
			private function uploadConcluidoCallback(event:Event=null):void
			{
				//componenteUpload.limpar();
				arquivoUploadService.listarPorEntidadePorIdentificador("LAUDO_TECNICO",_laudoTecnico.id);
				visualizadoImagem.recarregarImagens();
			}
			
			
			private function labelFunction(item:Object, column:DataGridColumn):String
			{
				var texto:String="";
				for each(var def:DefeitoOrcRep in item.listaDefeito){
					if (texto.length!=0){
						texto =texto + " "+ def.defeito.nome.toUpperCase() + ": "+def.justificativa;
					} else {
						texto=def.defeito.nome.toUpperCase() + ": "+def.justificativa;	
					}		
				}
				return texto;
			}
			
			private function labelFunction2(item:Object):String
			{	
				var texto:String = "";
				for each(var def:DefeitoOrcRep in item.listaDefeito){
					if (texto.length!=0){
						texto =texto + "\n"+ def.defeito.nome.toUpperCase() + ": "+def.justificativa;
					} else {
						texto=def.defeito.nome.toUpperCase() + ": "+def.justificativa;	
					}		
				}
				return texto;
			}
			
			public function validarCampos():Boolean {	
				var validatorArr:Array = new Array();
				validatorArr.push(infoTecnicas.stringValidator);
				validatorArr.push(descricao.stringValidator);
				
				var validatorErrorArray:Array = Validator.validateAll(validatorArr);;
				var isValidForm:Boolean = validatorErrorArray.length == 0;			
				return isValidForm;
			}

			[Bindable]
			public function get listaArquivoUpload():ArrayCollection
			{
				return _listaArquivoUpload;
			}

			public function set listaArquivoUpload(value:ArrayCollection):void
			{
				_listaArquivoUpload = value;
			}

			
		]]>
	</fx:Script>
	
