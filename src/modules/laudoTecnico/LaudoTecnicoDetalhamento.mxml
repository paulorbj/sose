											   labelText="{resourceManager.getString('ApplicationResource','INFORMACOES_TECNICAS')}" />
				</mx:HBox>
				<mx:HBox verticalAlign="middle" width="100%">
					<componentes:TextAreaInput id="descricao"  enabled="{_laudoTecnico.statusString == 'Iniciado'}"  
