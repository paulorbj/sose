				listaStatus.sort=sortA;
				listaStatus.refresh();
				listaStatus.sort = null;
				listaStatus.addItemAt("Todos",0);
				
				cbStatus.enabled = true;
				cbStatus.dataProvider = listaStatus;
				
				if(listaStatus.length > 0){
					if(statusSelecionado){
