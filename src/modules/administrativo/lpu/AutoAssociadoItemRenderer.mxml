<?xml version="1.0" encoding="utf-8"?>
<mx:Image xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 horizontalAlign="center" width="100%" height="100%"
		 verticalAlign="middle" >
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			private var _data:Object;
			
			private var _enable:Boolean;
						
			[Embed(source="/assets/icons/tick.png")]
			[Bindable]
			public var ativo_icon:Class;
			
			[Embed(source="/assets/icons/cross.png")]
			[Bindable]
			public var desativo_icon:Class;
						
			override public function set data(value:Object):void
			{
				_data = value;
				if(_data != null && _data.associacaoRealizada == true){
					this.source = ativo_icon;
					this.toolTip = "Associação realizada (Item LPU associado a uma unidade Servilog)";
				}else{
					this.source = desativo_icon;
					this.toolTip = "Associação NÃO realizada (Item LPU não associado a uma unidade Servilog)";
				}
				
			}
			
			override public function get data():Object
			{
				return _data;
			}
				
			public function get enable():Boolean
			{
				return _enable;
			}
			
			public function set enable(value:Boolean):void
			{
				_enable = value;
			}
			
		]]>
	</fx:Script>
	
</mx:Image>
