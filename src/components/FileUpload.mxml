<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 horizontalAlign="left" width="200"
		 verticalGap="0">
	
	<!-- Action Scripts -->
	<fx:Script>
		<![CDATA[
			/** Exposed text property */
			[Bindable]
			public var labelText:String;

		]]>
	</fx:Script>
	
	<s:Label text="{labelText}"/>
	
	<mx:HBox horizontalGap="4">
		
		<s:TextInput width="100%" height="25"/>
		
		<mx:Button icon="@Embed(source='/assets/icons/find.png')" width="25" height="25" toolTip="Procurar arquivo"/>
		
	</mx:HBox>
	
</mx:VBox>
