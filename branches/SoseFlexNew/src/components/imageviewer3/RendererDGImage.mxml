<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				width="150" height="100" xmlns:mx="library://ns.adobe.com/flex/mx" >
	
	<fx:Script>
		<![CDATA[
			override public function set data(value:Object):void {
				super.data = value;
				if (data == null)
					return;
				
				img.source = "http://localhost:8080/SoseWeb/arquivo_servilogi/" + data.tipoEntidade + "/" + data.identificadorEntidade + "/" + data.tipoArquivo + "/" + data.nome;
			}
			
		]]>
	</fx:Script>
	
	<mx:Image id="img"
			  verticalAlign="middle" horizontalAlign="center"
			  left="4" right="4" top="4" bottom="4" />
	
</s:ItemRenderer>
