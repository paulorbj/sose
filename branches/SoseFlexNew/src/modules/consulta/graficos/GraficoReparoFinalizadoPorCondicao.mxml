<?xml version="1.0" encoding="utf-8"?>
<graficos:GraficoContainer xmlns:fx="http://ns.adobe.com/mxml/2009" width="300" height="300"
						   xmlns:s="library://ns.adobe.com/flex/spark" tituloDoGrafico="Reparos por condição" creationPolicy="all"
						   xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:graficos="modules.consulta.graficos.*" >
	
	<fx:Script>
		<![CDATA[
			protected function aplicar(event:MouseEvent):void
			{
				expenses = new ArrayCollection();
				mudarParaGrafico();
			}
			
			protected function cancelar(event:MouseEvent):void
			{
				
				mudarParaGrafico();
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			[Bindable]
			public var expenses:ArrayCollection = new ArrayCollection([
				{Month:"Jan", Profit:2000, Expenses:1500},
				{Month:"Feb", Profit:1000, Expenses:200},
				{Month:"Mar", Profit:1500, Expenses:500}]);
		]]>
	</fx:Script>
	
	<graficos:grafico>
		<mx:VBox width="100%" height="100%" >
			<mx:ColumnChart id="myChart" height="100%" width="100%" paddingTop="5" paddingRight="5" paddingLeft="5" dataProvider="{expenses}" showDataTips="true">
				<mx:horizontalAxis>
					<mx:CategoryAxis 
						dataProvider="{expenses}" 
						categoryField="Month"
						/>
				</mx:horizontalAxis>
				<mx:series>
					<mx:ColumnSeries 
						xField="Month" 
						yField="Profit" 
						displayName="Profit"
						/>
					<mx:ColumnSeries 
						xField="Month" 
						yField="Expenses" 
						displayName="Expenses"
						/>
				</mx:series>
			</mx:ColumnChart>
			<mx:Legend dataProvider="{myChart}"/>
		</mx:VBox>
	</graficos:grafico>
	
	<graficos:configuracao>
		<mx:VBox width="100%" height="100%">
			<s:Label text="TESTANDO CONFIGURACAO" />
			<s:Label text="TESTANDO CONFIGURACAO" />
			<s:Label text="TESTANDO CONFIGURACAO" />
			<s:Label text="TESTANDO CONFIGURACAO" />
			
			<mx:HBox bottom="5" width="100%">
				<s:Button label="Aplicar" click="aplicar(event)" />
				<s:Button label="Cancelar" click="cancelar(event)" />
			</mx:HBox>
		</mx:VBox>

	</graficos:configuracao>
	
</graficos:GraficoContainer>
