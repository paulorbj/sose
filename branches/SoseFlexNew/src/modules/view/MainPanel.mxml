			private function onMensagem(event:MensagemEvent):void
			{
				notificationBar.addMessage(event.mensagem, event.tipo, event.delay);
			}
			
			private function onLimpar(event:NotificationEvent):void
			{
				notificationBar.closeAllMessages();
			}
			
			private function onAbrirPDF(event:PDFViewerEvent):void
			{
				containerPrincipal.removeAllChildren();
				visualizadoPDF.urlSource = event.urlString;
				if(event.modalCorrente != null){
					modalCorrente = event.modalCorrente;
					PopUpManager.removePopUp(modalCorrente);
				}
				containerPrincipal.addChild(visualizadoPDF);
			}
			
			private function onFecharPDF(event:PDFViewerEvent):void
			{
				containerPrincipal.removeAllChildren();
				containerPrincipal.addChild(moduloCorrente);
				if(modalCorrente != null){
					//PopUpManager.centerPopUp(modalCorrente);
					PopUpManager.addPopUp(modalCorrente,moduloCorrente, true);
					//modalCorrente = null;
				}
			}
			
			private function onAbrirImagem(event:ImagemViewerEvent):void
			{
				containerPrincipal.removeAllChildren();
				visualizadorImagem.idEntidade = event.idEntidade;
				visualizadorImagem.tipoEntidade = event.tipoEntidade;
				visualizadorImagem.imagemSelecionada = event.imagemSelecionada;
				
				if(event.modalCorrente != null){
					modalCorrente = event.modalCorrente;
					PopUpManager.removePopUp(modalCorrente);
				}
				containerPrincipal.addChild(visualizadorImagem);
				visualizadorImagem.carregarImagens();
			}
			
			private function onFecharImagem(event:ImagemViewerEvent):void
			{
				containerPrincipal.removeAllChildren();
				containerPrincipal.addChild(moduloCorrente);
				if(modalCorrente != null){
					//PopUpManager.centerPopUp(modalCorrente);
					PopUpManager.addPopUp(modalCorrente,moduloCorrente, true);
					//modalCorrente = null;
				}
				visualizadorImagem.idEntidade = null;
				visualizadorImagem.tipoEntidade = null;
			}

			private function buttonBarClick(event:IndexChangeEvent):void
			{
				switch (event.newIndex) 
				{
					case 0:
						containerPrincipal.removeAllChildren();
						containerPrincipal.addChild(moduloCorrente = new TelaHome());
						break;
					case 1:
						containerPrincipal.removeAllChildren();
						containerPrincipal.addChild(moduloCorrente = new TelaAdministrativo());
						break;
					case 2:
						containerPrincipal.removeAllChildren();
						containerPrincipal.addChild(moduloCorrente = new TelaRecebimento());
						break;
					case 3:
						containerPrincipal.removeAllChildren();
						containerPrincipal.addChild(moduloCorrente = new TelaAreaTecnica());
						break;
					case 4:
						containerPrincipal.removeAllChildren();
						containerPrincipal.addChild(moduloCorrente = new TelaExpedicao());
						break;
					case 5:
						containerPrincipal.removeAllChildren();
						containerPrincipal.addChild(moduloCorrente = new TelaProposta());
						break;
					case 6:
						containerPrincipal.removeAllChildren();
						containerPrincipal.addChild(moduloCorrente = new TelaEstoque());
						break;
					case 8:
						containerPrincipal.removeAllChildren();
						containerPrincipal.addChild(moduloCorrente = new TelaFaturamento());
						break;
					case 9:
						containerPrincipal.removeAllChildren();
						containerPrincipal.addChild(moduloCorrente = new TelaEstoqueAvaya());
						break;
					case 10:
						containerPrincipal.removeAllChildren();
						containerPrincipal.addChild(moduloCorrente = new TelaConsulta());
						break;
					
				}
				dispatchEvent(new NotificationEvent(NotificationEvent.LIMPAR_NOTIFICACOES));
				Login.usuarioAutenticado = null;
				modalCorrente = null;
			}
			
			
			
